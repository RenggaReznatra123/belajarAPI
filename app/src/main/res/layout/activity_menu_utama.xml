<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuUtama">

    <!-- LinearLayout di dalam ConstraintLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="#F0F4F8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liga Bola"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A73E8"
            android:layout_marginBottom="48dp" />

        <Button
            android:id="@+id/btnLaLiga"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="La Liga"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#1A73E8"
            android:elevation="6dp"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Premiere -->
        <Button
            android:id="@+id/btnPremier"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="Premier"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:backgroundTint="#34A853"
            android:elevation="6dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
